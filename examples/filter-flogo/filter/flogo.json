{
  "name": "filter",
  "type": "flogo:app",
  "version": "0.0.1",
  "description": "",
  "appModel": "1.1.0",
  "imports": [
    "github.com/project-flogo/contrib/trigger/rest",
    "github.com/project-flogo/stream",
    "github.com/n-is/learn-flogo/stream/activity/filters",
    "github.com/project-flogo/contrib/activity/log"
  ],
  "triggers": [
    {
      "id": "receive_http_message",
      "ref": "#rest",
      "settings": {
        "port": "7777"
      },
      "handlers": [
        {
          "settings": {
            "method": "GET",
            "path": "/test/:val"
          },
          "actions": [
            {
              "id": "simple_agg",
              "input": {
                "input": "=$.pathParams.val"
              }
            }
          ]
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "pipeline:simple_filter",
      "data": {
        "metadata": {
          "input": [
            {
              "name": "input",
              "type": "integer"
            }
          ]
        },
        "stages": [
          {
            "ref": "#filter",
            "settings": {
              "type": "non-zero",
              "proceedOnlyOnEmit": true
            },
            "input": {
              "value": "=$.input"
            }
          },
          {
            "ref": "#log",
            "input": {
              "message": "$.value"
            }
          }
        ]
      }
    }
  ],
  "actions": [
    {
      "ref": "#stream",
      "settings": {
        "pipelineURI": "res://pipeline/simple_filter"
      },
      "id": "simple_agg"
    }
  ]
}