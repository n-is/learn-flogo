{
    "name": "filters",
    "type": "flogo:activity",
    "version": "0.0.1",
    "title": "Filter Activity",
    "description": "Simple Sample Filter Activity",
    "author": "n-is",
    "homepage": "https://github.com/n-is/learn-flogo/stream/activity/filters",
    "settings": [
        {
            "name": "type",
            "type": "string",
            "required": true,
            "allowed": [ "non-zero" ]
        },
        {
            "name": "proceedOnlyOnEmit",
            "type": "boolean"
        }
    ],
    "input": [
        {
            "name": "value",
            "type": "any"
        }
    ],
    "output": [
        {
            "name": "filtered",
            "type": "boolean"
        },
        {
            "name": "value",
            "type": "any"
        }
    ]
}